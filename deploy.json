{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerName": {
            "defaultValue": "discord-bot",
            "type": "string"
        },
        "containerVersion": {
            "defaultValue": "main",
            "type": "string"
        },
        "Token": {
            "type": "secureString"
        },
        "ImageRegistry": {
            "defaultValue": "halbarad.azurecr.io",
            "type": "string"
        },
        "ImageRegistryUsername": {
            "defaultValue": "halbarad",
            "type": "string"
        },
        "ImageRegistryPassword": {
            "type": "securestring"
        },
        "HoneycombDataset": {
            "type": "string"
        },
        "HoneycombApiKey": {
            "type": "securestring"
        },
        "OptimizelyKey": {
            "type": "securestring"
        },
        "MinecraftServerAddress": {
            "type": "string"
        },
        "MinecraftServerPassword": {
            "type": "securestring"
        },
        "MembersTimezones": {
            "type": "string"
        },
        "LunchLink": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('containerName')]",
            "location": "westeurope",
            "dependsOn": [
                "[resourceId('Microsoft.DocumentDb/databaseAccounts',parameters('containerName'))]"
            ],
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[concat('halbarad.azurecr.io/go/', parameters('containerName'), ':', parameters('containerVersion'))]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "DISCORD_TOKEN",
                                    "value": "[parameters('Token')]"
                                },
                                {
                                    "name": "HONEYCOMB_KEY",
                                    "value": "[parameters('HoneycombApiKey')]"
                                },
                                {
                                    "name": "HONEYCOMB_DATASET",
                                    "value": "[parameters('HoneycombDataset')]"
                                },
                                {
                                    "name": "OPTIMIZELY_KEY",
                                    "value": "[parameters('OptimizelyKey')]"
                                },
                                {
                                    "name": "MCSERVERADDR",
                                    "value": "[parameters('MinecraftServerAddress')]"
                                },
                                {
                                    "name": "MCSERVERPASS",
                                    "value": "[parameters('MinecraftServerPassword')]"
                                },
                                {
                                    "name": "MEMBER_TIMEZONES",
                                    "value": "[parameters('MembersTimezones')]"
                                },
                                {
                                    "name": "LUNCH_LINK",
                                    "value": "[parameters('LunchLink')]"
                                },
                                {
                                    "name": "COSMOSDB_URI",
                                    "value": "[listConnectionStrings(resourceid('Microsoft.DocumentDb/databaseAccounts',parameters('containerName')),'2020-04-01').connectionStrings[0].connectionString]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "imageRegistryCredentials": [
                    {
                        "server": "[parameters('ImageRegistry')]",
                        "username": "[parameters('ImageRegistryUsername')]",
                        "password": "[parameters('ImageRegistryPassword')]"
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "ip": "10.0.0.4",
                    "type": "Private"
                },
                "osType": "Linux",
                "networkProfile": {
                    "id": "[resourceId('Microsoft.Network/networkProfiles','discord-bot-networkProfile')]"
                }
            }
        },
        {
            "apiVersion": "2020-04-01",
            "kind": "MongoDB",
            "type": "Microsoft.DocumentDb/databaseAccounts",
            "name": "[parameters('containerName')]",
            "location": "westeurope",
            "properties": {
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "id": "[concat(parameters('containerName'), '-westeurope')]",
                        "failoverPriority": 0,
                        "locationName": "westeurope"
                    }
                ],
                "backupPolicy": {
                    "type": "Periodic",
                    "periodicModeProperties": {
                        "backupIntervalInMinutes": 1440,
                        "backupRetentionIntervalInHours": 48
                    }
                },
                "isVirtualNetworkFilterEnabled": false,
                "virtualNetworkRules": [],
                "ipRules": [],
                "dependsOn": [],
                "enableMultipleWriteLocations": false,
                "capabilities": [
                    {
                        "name": "EnableMongo"
                    },
                    {
                        "name": "DisableRateLimitingResponses"
                    }
                ],
                "apiProperties": {
                    "serverVersion": "3.6"
                },
                "enableFreeTier": true
            },
            "tags": {
                "defaultExperience": "Azure Cosmos DB for MongoDB API",
                "hidden-cosmos-mmspecial": "",
                "CosmosAccountType": "Non-Production"
            }
        }
    ]
}
